

<section class="container-fluid">
  <div class="row">
    <h1 class="text-center">Showing Quiz: <%= @quiz.title %></h1>
  </div>
  <form id="quiz_form">
  <% @qa_hash.each_with_index do |obj, index| %>
    <div class="row">
      <div class="question">
        <h5><%= obj["question"] %></h5>
        <div class="radio">
          <label>
            <input name="answer<%= index %>" type="radio">
            <%= obj["answers"][0] %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input name="answer<%= index %>" type="radio">
            <%= obj["answers"][1] %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input name="answer<%= index %>" type="radio">
            <%= obj["answers"][2] %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input name="answer<%= index %>" type="radio">
            <%= obj["answers"][3] %>
          </label>
        </div>
        <div class="btn btn-success">
          <label>
            <input name="correct<%= index %>"id="correct_answer" type="radio">
            <%= obj["correct"] %>
          </label>
        </div>

        <div class="btn btn-info">
          <label>
            <name="user_answer<%= index %>" type="select">
            <%= puts obj["selection"] %>
          </label>
        </div>

      </div>
    </div>
  <% end %>
  </form>
</section>

<p>This will show a submission's graded results</p>
