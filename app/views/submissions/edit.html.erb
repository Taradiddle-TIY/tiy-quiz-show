<section class="container-fluid">
  <div class="row">
    <h1 class="text-center">Taking Quiz: <%= @quiz.title %></h1>
  </div>

  <!-- This form will be overwritten by quiz_viewer.js -->
  <form id="quiz_form">
  <% @qa_hash.each_with_index do |obj, index| %>
    <div class="row">
      <div class="question">
        <h5><%= obj["question"] %></h5>
        <div class="radio">
          <label>
            <input name="answer<%= index %>" type="radio">
            <%= obj["answers"][0] %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input name="answer<%= index %>" type="radio">
            <%= obj["answers"][1] %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input name="answer<%= index %>" type="radio">
            <%= obj["answers"][2] %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input name="answer<%= index %>" type="radio">
            <%= obj["answers"][3] %>
          </label>
        </div>
      </div>
    </div>
  <% end %>
    <div class="row">
      <button id="submit-btn" type="button" class="btn btn-primary">Submit quiz</button>
      <button id="save-btn" type="button" class="btn btn-default">Save quiz</button>
    </div>
  </form>
</section>

<script type="text/javascript">
  quizViewer = new QuizViewer(<%= @quiz.qajson %>, document.getElementById('quiz_form'));

</script>