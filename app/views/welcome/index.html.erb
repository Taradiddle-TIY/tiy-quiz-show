

<section class="welcome-page">
  <header>
    <div class="flex">

    <div class="title-block">
      <a href="<%=login_path%>" class="btn" id="login" role="button">
      </a>
    </div>
    <h2 class="title">TIME</h2>
  </div>
    <hr class="star-light">
    <span id="sub-text" class="skills">check your brain</span>
  </header>

  <div class="welcome_page">
    <div class="container join-us">
      <h3 id='join' class="lead"> JOIN US? </h3>
        <div class="text-center" >
          <a href="<%=new_user_path%>" class="btn btn-default btn-lg" id="sign-up" role="button">SIGN UP</a>
        </div>
    </div>
  </div>

  <h2 class="top-scores">TOP SCORES!!!</h2>

  <table class="table table-striped welcome-table">
    <tr>
      <th>User</th>
      <th>Percent Correct</th>
    </tr>
      <% @complete_submissions.each do |submission| %>
        <tr>
          <td><%= User.find(submission.user_id).name %></td>
          <td><%= (submission.correct.to_f / submission.possible.to_f).round(3) * 100 %></td>
        </tr>
      <% end %>
  </table>
</section>
