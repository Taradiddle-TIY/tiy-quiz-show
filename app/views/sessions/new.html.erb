<%= notice %>

<div class="background-login">

<%= bootstrap_form_tag url: '/login' do %>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
      <br />
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>

  <div class="actions" id="sign-up"><%= submit_tag "Log In" %></div>
<% end %>

</div>
