<!-- Note: this form's submit event is overridden by the script in the view template -->
<%= form_with(model: quiz, local: true, :html => { :id => "quiz_form" }) do |form| %>
  <% if quiz.errors.any? %>
    <div id="error_explanation">
			<h2><%= pluralize(quiz.errors.count, "error") %>
			prohibited this book from being saved:</h2>
			
			<ul>
			<% quiz.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
    </div>
  <% end %>

  <div class="field">
		<%= form.label :title %>
    <%= form.text_field :title, id: :quiz_title %>
  </div>

  <!-- Note: this wrapper's dom is generated by the script in the view template -->
  <ol id="qa-wrapper">
  </ol>
  <button id="newquestionbtn" class="btn btn-primary" type="button">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Question
  </button>

  <div class="actions">
		<%= form.submit %>
  </div>

<% end %>